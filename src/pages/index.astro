<style>
  @keyframes float {
    0% {
      transform: translatey(0);
    }
    50% {
      transform: translatey(-10px);
    }
    100% {
      transform: translatey(0);
    }
  }
  .float {
    animation: float 3s ease-in-out infinite;
  }

  body {
    background-color: #333;
  }

  /* Slider */
  .slider img {
    width: 20rem;
    height: fit-content;
  }

  .slider {
    padding: 10px;
    overflow: hidden;
  }

  .slider-section h2 {
    color: #f6f6f6;
  }

  @media screen and (max-width: 768px) {
    .slider {
      padding: 10px;
      overflow: hidden;
      width: 100vw;
    }

    .slider img {
      width: 10rem;
      height: auto;
      object-fit: cover; /* Ensures images maintain aspect ratio */
    }

    .slide-track {
      display: flex;
      gap: 3em;
      width: calc(100% * 11); /* Adjusted for proper image spacing */
      animation: scroll 120s linear infinite;
    }
  }

  .slide-track {
    display: flex;
    gap: 3em;
    width: calc(100% * 11);
    animation: scroll 120s linear infinite;
  }

  .slide {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 10rem; /* Ensures no extra spacing */
  }

  /* Scrolling animation */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
