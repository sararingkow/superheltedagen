---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Astro.props.description} />
    <meta property="og:locale" content="da_DK" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={Astro.props.ogtitle} />
    <meta property="og:description" content={Astro.props.ogdescription} />
    <title>{Astro.props.title}</title>
  </head>
  <body>
    <header>
      <Header />
    </header>

    <main class="overflow-x-hidden">
      <slot />
    </main>

    <footer class="">
      <Footer />
    </footer>
  </body>
</html>

<style>
  body {
    background: #2bc0cf;
    background: linear-gradient(-90deg, #2bc0cf 0%, #1c8a9e 50%, #205b6a 83%);
  }

  html {
    scroll-behavior: smooth;
  }

  @font-face {
    font-family: "Satoshi-regular", sans-serif;
    src:
      url("/fonts/satoshi_font/satoshi-regular.woff") format(".woff"),
      url("/fonts/satoshi_font/satoshi-regular.woff2") format(".woff2");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Satoshi-bold", sans-serif;
    src:
      url("/fonts/satoshi_font/satoshi-bold.woff") format(".woff"),
      url("/fonts/satoshi_font/satoshi-bold.woff2") format(".woff2");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Satoshi-black", sans-serif;
    src:
      url("/fonts/satoshi_font/satoshi-black.woff") format(".woff"),
      url("/fonts/satoshi_font/satoshi-black.woff2") format(".woff2");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Satoshi-medium", sans-serif;
    src:
      url("/fonts/satoshi_font/satoshi-medium.woff") format(".woff"),
      url("/fonts/satoshi_font/satoshi-medium.woff2") format(".woff2");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "Satoshi-italic", sans-serif;
    src:
      url("/fonts/satoshi_font/satoshi-italic.woff") format(".woff"),
      url("/fonts/satoshi_font/satoshi-italic.woff2") format(".woff2");
    font-weight: normal;
    font-style: normal;
  }
</style>

<script>
  import { animate } from "motion";
  /*Entrance Animation*/
  animate("body", { opacity: [0, 1] }, { duration: 1 });
</script>
