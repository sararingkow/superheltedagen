<style>
  .slider-container {
    overflow: hidden;
    width: 100vw;
    white-space: nowrap;
  }

  .slider-track {
    display: flex;
    gap: 2rem;
    will-change: transform;
  }

  .slide {
    flex: 0 0 auto;
    width: 10rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slide img {
    width: 10rem;
    height: auto;
  }
</style>

<script>
  import { inView } from "motion";

  document.addEventListener("DOMContentLoaded", function () {
    const track = document.querySelector(".slider-track");
    const slides = Array.from(track.children);

    // Duplicate slides to ensure smooth infinite loop
    slides.forEach((slide) => {
      const clone = slide.cloneNode(true);
      track.appendChild(clone);
    });

    let speed = 1; // Adjust speed if needed
    let position = 0;

    function animate() {
      position -= speed;

      // Move first slide to the end instead of resetting
      if (position <= -slides[0].offsetWidth - 32) {
        // Adjust for gap (2rem = 32px)
        position = 0;
        track.appendChild(track.firstElementChild);
      }

      track.style.transform = `translateX(${position}px)`;
      requestAnimationFrame(animate);
    }

    animate(); // Start animation
  });

  /* inView Animations */
  const elemntmedanimation1 = document.querySelector(".slider-container");
  inView(elemntmedanimation1, () => {
    elemntmedanimation1.classList.add("animate__animated", "animate__zoomIn");
  });
</script>
