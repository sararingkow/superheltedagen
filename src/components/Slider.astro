<style>
  /* Slider */
  .slider img {
    width: 20rem;
    height: fit-content;
  }

  .slider {
    padding: 10px;
    overflow: hidden;
  }

  .slider {
    padding: 3.5px;
    overflow: hidden;
    width: 100vw;
  }

  .slider img {
    width: 10rem;
    height: auto;
    object-fit: cover;
  }

  .slide-track {
    display: flex;
    gap: 3em;
    width: calc(100% * 16); /* Increased to accommodate for duplicate slides */
    animation: scroll 180s linear infinite;
  }

  .slide {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 10rem; /* Ensures no extra spacing */
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    99.9% {
      transform: translateX(-50%); /* Smooth transition before restarting */
    }
    100% {
      transform: translateX(0); /* Resets back to the start */
    }
  }

  @media screen and (max-width: 768px) {
    .slider {
      padding-bottom: 10px;
      overflow: hidden;
      width: 100vw;
    }

    .slide-track {
      display: flex;
      gap: 3em;
      width: calc(100% * 16); /* Same as above */
      animation: scroll 100s linear infinite;
    }

    .slider img {
      width: 10rem;
      height: auto;
      object-fit: cover;
    }
  }
</style>
