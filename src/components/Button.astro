---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-6 p-3 font-semibold transition duration-300 ease-in-out";

const variantClasses = {
  primary: "bg-turquoise-800 hover:bg-turquoise-900 text-gray-50",
  secondary: "bg-gray-50 text-turquoise-800 hover:opacity-50",
  tertiary: "border-2 border-turquoise-800 hover:opacity-50 bg-transparent text-turquoise-800 hover:opacity-50",
};

const sizeClasses = {
  large: "text-3xl",
  medium: "text-2xl",
  small: "text-lg",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot button /></button>
